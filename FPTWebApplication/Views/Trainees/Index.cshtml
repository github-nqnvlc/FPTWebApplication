@model IEnumerable<FPTWebApplication.Models.Trainee>
@{
    ViewBag.Title = "Index";
}

<h1>Trainee</h1>
@Html.ActionLink(
    "Create new Trainee", 
    "Create", 
    "Trainees",null,
    new { @class = "btn btn-primary" }
    )

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Full Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Birth Day</th>
            <th scope="col">Course</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainee in Model)
        {
            <tr>
                <th scope="row">@trainee.Id</th>
                <td>@trainee.FullName</td>
                <td>@trainee.Gender</td>
                <td>@trainee.BDay</td>
                <td>@trainee.Course</td>
                <td>
                    @Html.ActionLink(
                   "Detail", 
                   "Details", 
                   "Trainees", 
                   new { id = trainee.Id }, 
                   new { @class = "btn btn-primary" }
                   )
                    <a href="#" class="btn btn-danger">Delete</a>
                    <a href="#" class="btn btn-default">Edit</a>

                </td>
            </tr>
        }

    </tbody>
</table>